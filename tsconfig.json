{
    "compilerOptions": {
        "outDir": "dist", // 输出目录
        "sourceMap": true, // 生成 sourceMap
        "target": "es2016", // 目标语法
        "module": "esnext", // 模块格式
        "moduleResolution": "node", // 模块解析方式
        "strict": true, // 严格模式
        "resolveJsonModule": true, // 支持 json 模块
        "esModuleInterop": true, // 允许通过es6语法引入commonjs模块
        "jsx": "preserve", //jsx不转义,
        "lib": ["esnext", "dom"], // 支持的类库 esnext dom
        "baseUrl": "./", // 项目根目录
        "paths": {
            "@vue/*": ["packages/*/src"]
        }
    }
}
